<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgcolor2"
    tools:context=".addabaya">
    <Space
        android:layout_width="match_parent"
        android:layout_height="128dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Abaya"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="italic" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />
    <EditText
        android:id="@+id/idabaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20dp"
        android:hint="Enter ID" />
    <EditText
        android:id="@+id/nameabaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20dp" />
    <CheckBox
        android:id="@+id/abayacheck1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FC9470"
        android:text="Abaya"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/abayacostt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter cost"
        android:inputType="text"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/abayaquantityy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter quantity"
        android:inputType="text" />
    <Button
        android:id="@+id/calcabayatotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FC9470"
        android:text="Calculate"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/tltabcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Total Cost"
        android:inputType="text" />
    <EditText
        android:id="@+id/datee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter date"
        android:inputType="text"
        android:textAlignment="center" />
    <EditText
        android:id="@+id/phnocust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:hint="Enter phone number" />
    <Button
        android:id="@+id/addaby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FC9470"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Add Abaya" />
    <Button
        android:id="@+id/clrall1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FC9470"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Clear all fields" />
</LinearLayout>